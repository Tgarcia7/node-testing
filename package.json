{
  "name": "node-testing",
  "version": "1.0.0",
  "description": "Simple Node.js API to demonstrate the implementation of unit and integration testing.",
  "main": "server.js",
  "private": true,
  "scripts": {
    "dev": "nodemon server.js",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
