    "integration": "mocha --config __tests__/integration/.mocharc.js"
  },
  "keywords": [
    "node",
    "testing",
    "unit",
    "integration",
    "express",
    "mocha",
    "chai"
  ],
  "author": "Tey Garc√≠a",
