    "moment": "^2.29.4",
    "mongoose": "^7.2.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "axios": "^1.4.0",
    "chai": "^4.3.7",
    "dotenv": "^16.1.3",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "mongodb-memory-server": "^8.12.2",
